
@{
    ViewData["Title"] = "Index";
}

@model IEnumerable<CRUDApplication.Models.Employee>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Employees</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-controller="Employee" asp-action="Create">Create new Employee</a>
        </div>
    </div>
    <br/>

    @if(Model.Count() > 0) 
    { 
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Address
                    </th>
                    <th>
                        Salary
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var employee in Model)
                {
                    <tr>
                        <td width="35%">@employee.Name</td>
                        <td width="35%">@employee.Address</td>
                        <td width="35%">@employee.Salary</td>
                        <td width="30%">
                            <div class="w-100 btn-group" role="group">
                                <a class="btn btn-primary mx-1" asp-controller="Employee" asp-route-Id="@employee.Id" asp-action="Update">Update</a>
                                <a class="btn btn-danger mx-1" asp-controller="Employee" asp-route-Id="@employee.Id" asp-action="Delete">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table> 
    }
    else
    { 
        <p>No Employee in Database</p>
    }
</div>